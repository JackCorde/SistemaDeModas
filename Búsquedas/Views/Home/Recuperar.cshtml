@model Búsquedas.Models.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Recuperar";
}

@{
    Layout = null;
}


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>inicio </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  </head>
  <body>
    <style>
        body {
          font-family: Arial, sans-serif;
          background-color: white;
        }

        h2{
            font-family: 'Cyrillic Bodoni', serif;
            font-weight: 300;
        }

        .navbar {
          background-color: transparent !important; 
        }
        .navbar-brand {
          font-size: 24px;
          color: white; 
          margin-right: 15px; 
        }
        .navbar-nav .nav-link {
          color: white !important; 
        }
        .navbar-toggler {
          border-color: white !important; 
        }
    
        .nav-link {
            color: #fff;
            background-color: #A58C9B;
            padding: 7px 20px;
            border-radius: 20px;
            transition: background-color 0.3s, color 0.3s;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; /* Familia de fuente */

            letter-spacing: 2px; /* Espaciado entre letras */
            text-transform: uppercase;
        }
    
        .nav-link:hover {
            background-color: #333;
        }
    
        .nav-item {
            margin-right: 10px;
        }

      </style>
    
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img style="max-height:3em; margin-left:4em;" src="/img/logosensillo.png" alt=""></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" style="margin-right: 4em;" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Registro">REGISTRATE</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Login">INICIA SESIÓN</a></li>

                </ul>
            </div>
        </div>
    </nav>

      <div class="container">
        <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <section style="background-color: #FFD0EC; border-radius: 15px; padding: 20px;">
                    <h2 class="text-black text-center mb-4">Recuperar Contraseña</h2>
                    <p class="text-muted text-center mb-4">Ingresa tu dirección electrónica</p>
    
                    <form asp-action="Recuperacion" method="post" asp-controller="Home">
                        <div class="mb-3">
                            <input type="email" class="form-control" asp-for="Correo" id="Correo" placeholder="Correo Electrónico" required>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-light btn-custom mx-auto" style="border-radius: 25px; color: white; background-color: #333; width: 200px;" onmousedown="this.style.backgroundColor='black'" onmouseup="this.style.backgroundColor='#333'">RECUPERAR</button>
                        </div>
                    </form>
                    @if (ViewBag.Error != null)
                    {
                        <div class="text-danger text-center">@ViewBag.Error</div>
                    }
                </section>
            </div>
        </div>
    </div>

    
    
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>  
    
   </body>
</html>

