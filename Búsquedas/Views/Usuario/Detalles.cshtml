@model Búsquedas.Models.Comentario;
@using System.Security.Claims;
@{
    ViewData["Title"] = "Detalles";
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: white;
        }

        h5{
            font-family: 'Cyrillic Bodoni', serif;
            font-weight: 200;
            color: #737373;
            font-size: 3em;
        }

        p{
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; /* Familia de fuente */
            /*font-weight: bold;  Peso de la fuente */
            font-size: 20px; /* Tamaño de la fuente */
            letter-spacing: 1px; /* Espaciado entre letras */
        }

        /*NAVBAR*/
        .navbar {
            background-color: transparent !important;
        }

        .navbar-brand {
            font-size: 24px;
            color: white;
            margin-right: 15px;
        }

        .navbar-nav .nav-link {
            color: white !important;
        }

        .navbar-toggler {
            border-color: white !important;
        }

        .nav-link {
            color: #fff;
            background-color: #A58C9B;
            padding: 7px 20px;
            border-radius: 20px;
            transition: background-color 0.3s, color 0.3s;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; /* Familia de fuente */

            letter-spacing: 2px; /* Espaciado entre letras */
            text-transform: uppercase;
        }

            .nav-link:hover {
                background-color: #333;
            }

        .nav-item {
            margin-right: 10px;
        }



        /* Estilos generales */
        * {
            /*box-sizing: border-box;*/
            margin: 0;
            padding: 0;
        }
        /* Estilos para el contenedor principal */
        .container {
            max-width: 1200px;
            margin: 20px auto;
        }
        /* Estilos para las tarjetas */
        .card {
            /*border: 1px solid #ccc;*/
            padding: 20px;
        }
        /* Estilos para las imágenes */
        .img-fluid, .w-100 {
            width: 100%;
            height: auto;
        }

        /* Estilos para los comentarios */
        .comment {
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
            margin-bottom: 15px;
            background-color: #fce4ec; /* Color rosa suave */
            border-radius: 8px;
            padding: 15px;
        }

            .comment .user {
                font-weight: bold;
                margin-bottom: 5px;
            }

            .comment .date {
                color: #777;
                font-size: 14px;
                margin-bottom: 10px;
            }

            .comment .content {
                color: #333;
                font-size: 16px;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img style="max-height:3em; margin-left:4em;" src="/img/logosensillo.png" alt=""></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" style="margin-right: 4em;" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-light" asp-action="Compras" asp-controller="Usuario">Tus Compras</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><b>Catalogos</b></a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Productos" asp-route-Categoria="1">Mujer</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Productos" asp-route-Categoria="5">Accesorios</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Productos" asp-route-Categoria="2">Hombre</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Productos" asp-route-Categoria="3">Niño</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Productos" asp-route-Categoria="4">Niña</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link text-light" asp-action="CerrarSesion" asp-controller="Home"><b>Cerrar Sesion</b></a></li>

                </ul>
            </div>
        </div>
    </nav>

    <br>
    <br>

    <div class="container" style="max-width: 1200px; margin: 150px auto;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="row">
                        
                        <div class="col-4">
                            <img class="img-fluid" src="/img/ropa.jpg" alt="Imagen">
                        </div>
                        <div class="col-6">
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.Producto.Tipo @ViewBag.Producto.Modelo</h5>
                                <br>
                                <p class="card-text"><b>Talla:</b> @ViewBag.Producto.Talla</p>
                                <p class="card-text"><b>Categoria</b> @ViewBag.Producto.Categoria</p>
                                <p class="card-text"><b>Marca</b> @ViewBag.Producto.Marca</p>
                                <p class="card-text"><b>Modelo</b> @ViewBag.Producto.Modelo</p>
                                <br>
                                <div>
                                    <a href="ruta_de_compra" class="btn btn-primary" style="background-color: #555; border-color: #555;">COMPRAR</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="col-md-2"></div>
            <div class="col-md-7">
                <br><br><br><br>
                <div class="card" style="border: hidden;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #333; font-size: 24px; font-weight: bold;">Comentarios</h5>
                        <form asp-action="Comentario" method="post" asp-controller="Usuario">
                            <div class="row">
                                <div class="form-group col-10">
                                    <label for="comentario" style="color: #000;">Deja tu comentario:</label>
                                    <input type="hidden" asp-for="UsuarioId" value="@User.FindFirstValue(ClaimTypes.SerialNumber)" />
                                    <input type="hidden" asp-for="ProductoId" value="@ViewBag.Producto.IdProducto" />
                                    <input type="text" class="form-control mb-3" id="Contenido" asp-for="Contenido" placeholder="Escribe tu comentario aquí">
                                </div>
                                <div class="col-2">
                                    <br>
                                    <button type="submit" class="btn btn-primary" style="background-color: #69bef7;">Enviar</button>
                                </div>
                            </div>
                            
                            
                        </form>
                        <br>
                        @if (ViewBag.Comentarios.Count == 0)
                        {
                            <div class="col-md-12">
                                <div class="row py-lg-2">
                                    <div class="col-lg-6 col-md-8 mx-auto text-center">
                                        <h1 class="fw-light titulos">
                                            <i class="fa-regular fa-face-frown"></i>
                                        </h1>
                                        <p class="p-0">
                                            Sin comentarios encontrados
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @foreach (var item in ViewBag.Comentarios)
                        {
                            <div class="comment">
                                <div class="content">@item.UsuarioNombre</div>
                                <div class="user"> @item.Contenido</div>
                                <div class="date text-end">@item.Fecha</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>